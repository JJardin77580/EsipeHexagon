package Pionnieers.Hexagon;

import hexalib.Hexalib.HexagonView;

import java.awt.Color;

import Pionnieers.Player;


public class DataHexagon {
	private Integer identifiant;
	
	private
	private int type;
	public enum Type {FOREST, PASTURE, FARMLAND, HILL, MOUNTAIN,DESERT, MARINA, SEA;};
	
	/*public Hexagon(HexagonType type) {
